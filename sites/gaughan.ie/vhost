server {
	include common_params;
	include ssl_params;

	server_name gaughan.ie;
	root /home/freebsd/sites/gaughan.ie/web;
	index index.html index.htm;

	ssl_certificate /usr/local/etc/ssl/acme/gaughan.ie/fullchain.pem;
	ssl_certificate_key /usr/local/etc/ssl/acme/private/gaughan.ie.pem;

	access_log /var/log/www/gaughan.ie.access.log combined;
	error_log /var/log/www/gaughan.ie.error.log;
}

server {
	include common_params;
	include ssl_params;

	server_name www.gaughan.ie;
	return 301 https://gaughan.ie$request_uri;

	ssl_certificate /usr/local/etc/ssl/acme/gaughan.ie/fullchain.pem;
	ssl_certificate_key /usr/local/etc/ssl/acme/private/gaughan.ie.pem;
}

server {
	include common_params;

	listen 80;
	listen [::]:80;

	server_name .gaughan.ie;
	return 301 https://gaughan.ie$request_uri;
}
